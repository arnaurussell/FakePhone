<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="russell.arnau.fakephone.FakePhone">

    <Button
        android:id="@+id/botoTruca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/botoEsborra"
        android:layout_alignLeft="@+id/boto9"
        android:layout_alignStart="@+id/boto9"
        android:text="Truca" />

    <Button
        android:id="@+id/botoEsborra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/boto7"
        android:layout_alignRight="@+id/boto7"
        android:layout_below="@+id/boto0"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:text="Esborra" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/boto1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_below="@+id/editText"
        android:text="1" />

    <Button
        android:id="@+id/boto2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:text="2" />

    <Button
        android:id="@+id/boto3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_below="@+id/editText"
        android:text="3" />

    <Button
        android:id="@+id/boto4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/boto1"
        android:layout_alignStart="@+id/boto1"
        android:layout_below="@+id/boto1"
        android:layout_marginTop="20dp"
        android:text="4" />

    <Button
        android:id="@+id/boto6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/boto3"
        android:layout_alignRight="@+id/boto3"
        android:layout_alignTop="@+id/boto4"
        android:text="6" />

    <Button
        android:id="@+id/boto5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/boto4"
        android:layout_centerHorizontal="true"
        android:text="5" />

    <Button
        android:id="@+id/boto7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/boto4"
        android:layout_alignStart="@+id/boto4"
        android:layout_below="@+id/boto4"
        android:layout_marginTop="20dp"
        android:text="7" />

    <Button
        android:id="@+id/boto9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/boto6"
        android:layout_alignRight="@+id/boto6"
        android:layout_alignTop="@+id/boto7"
        android:text="9" />

    <Button
        android:id="@+id/boto8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/boto7"
        android:layout_centerHorizontal="true"
        android:text="8" />

    <Button
        android:id="@+id/boto0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/boto8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="0" />

</RelativeLayout>
